#!/bin/bash
if [ "$1" = "compile" ]
then
    javac --source-path ./jlox/src ./jlox/src/com/craftinginterpreters/lox/Lox.java ./jlox/src/com/craftinginterpreters/lox/AstPrinter.java ./jlox/src/com/craftinginterpreters/tool/GenerateAst.java
elif [ "$1" = "clean" ]
then
    rm -f ./jlox/src/com/craftinginterpreters/lox/*.class ./jlox/src/com/craftinginterpreters/tool/*.class
elif [ "$1" = "repl" ]
then
    java -cp ./jlox/src com/craftinginterpreters/lox/Lox
elif [ "$1" = "generate" ]
then
    java -cp ./jlox/src com/craftinginterpreters/tool/GenerateAst ./jlox/src/com/craftinginterpreters/lox
elif [ "$1" = "print" ]
then
    java -cp ./jlox/src com/craftinginterpreters/lox/AstPrinter
else
    if [ -z "$1" ]
    then
        echo "Arguments:"
        echo "repl            Run REPL"
        echo "<filename>.lox  Interpret file"
        echo "compile         Compile Lox Java Sources"
        echo "clean           Delete .class files"
        echo "generate        Auto-generate AST classes"
    else
        java -cp ./jlox/src com/craftinginterpreters/lox/Lox "$1"
    fi
fi